<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/TrainDataShapeAppearance">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_8"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                android:tint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_setting"
                app:layout_constraintTop_toTopOf="@+id/tv_setting"
                app:layout_constraintBottom_toBottomOf="@+id/tv_setting"/>


            <TextView
                android:id="@+id/tv_setting"
                style="@style/TextViewSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_marginEnd="56dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Train settings"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_back"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/tv_train_distance_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_12"
        android:fontFamily="sans-serif-light"
        android:text="Установить лимит по дистанции"
        android:textAppearance="?textAppearanceBody1"
        android:textSize="@dimen/text_20"
        app:layout_constraintEnd_toStartOf="@+id/switch_train_distance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_title" />

    <TextView
        android:id="@+id/tv_change_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:background="?selectableItemBackground"
        android:fontFamily="sans-serif-light"
        android:text="@string/train_distance_change_value"
        android:textSize="@dimen/text_18"
        app:layout_constraintEnd_toEndOf="@+id/tv_train_distance_title"
        app:layout_constraintStart_toStartOf="@+id/tv_train_distance_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_train_distance_title" />

    <Switch
        android:id="@+id/switch_train_distance"
        android:theme="@style/SettingsTrainSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_16"
        app:layout_constraintBottom_toBottomOf="@+id/tv_train_distance_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_train_distance_title" />

    <TextView
        android:id="@+id/tv_distance_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:text="Введите максимальное расстояние, которое безопасно для вас"
        android:textSize="@dimen/text_16"
        app:layout_constraintEnd_toEndOf="@id/tv_train_distance_title"
        app:layout_constraintStart_toStartOf="@+id/tv_train_distance_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_change_distance" />

    <TextView
        android:id="@+id/tv_train_time_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_32"
        android:layout_marginEnd="@dimen/margin_12"
        android:fontFamily="sans-serif-light"
        android:text="Установить лимит по времени"
        android:textAppearance="?textAppearanceBody1"
        android:textSize="@dimen/text_20"
        app:layout_constraintEnd_toStartOf="@+id/switch_train_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_distance_hint" />

    <Switch
        android:id="@+id/switch_train_time"
        android:theme="@style/SettingsTrainSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_16"
        app:layout_constraintBottom_toBottomOf="@+id/tv_train_time_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_train_time_title" />

    <TextView
        android:id="@+id/tv_change_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:background="?selectableItemBackground"
        android:fontFamily="sans-serif-light"
        android:text="@string/train_distance_change_value"
        android:textSize="@dimen/text_18"
        app:layout_constraintEnd_toEndOf="@+id/tv_train_time_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_train_time_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_train_time_title" />

    <TextView
        android:id="@+id/tv_time_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:text="Введите максимальное время тренировки, которое безопасно для вас"
        android:textSize="@dimen/text_16"
        app:layout_constraintEnd_toEndOf="@id/tv_train_time_title"
        app:layout_constraintStart_toStartOf="@+id/tv_train_time_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_change_time" />
 <TextView
        android:id="@+id/tv_train_stay_time_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_32"
        android:layout_marginEnd="@dimen/margin_12"
        android:fontFamily="sans-serif-light"
        android:text="Установить лимит по остановке"
        android:textAppearance="?textAppearanceBody1"
        android:textSize="@dimen/text_20"
        app:layout_constraintEnd_toStartOf="@+id/switch_train_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_hint" />

    <Switch
        android:id="@+id/switch_train_stay_time"
        android:theme="@style/SettingsTrainSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_16"
        app:layout_constraintBottom_toBottomOf="@+id/tv_train_stay_time_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_train_stay_time_title" />

    <TextView
        android:id="@+id/tv_change_stay_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:background="?selectableItemBackground"
        android:fontFamily="sans-serif-light"
        android:text="@string/train_distance_change_value"
        android:textSize="@dimen/text_18"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/tv_train_stay_time_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_train_stay_time_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_train_stay_time_title"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tv_stay_time_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:text="Введите максимальное время, которое "
        android:textSize="@dimen/text_16"
        app:layout_constraintEnd_toEndOf="@id/tv_train_stay_time_title"
        app:layout_constraintStart_toStartOf="@+id/tv_train_stay_time_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_change_stay_time" />

    <TextView
        android:id="@+id/tv_train_notification_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_32"
        android:layout_marginEnd="@dimen/margin_12"
        android:fontFamily="sans-serif-light"
        android:text="Разрешить уведомления"
        android:textAppearance="?textAppearanceBody1"
        android:textSize="@dimen/text_20"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/switch_train_notification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_stay_time_hint" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_train_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_16"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_train_notification_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_train_notification_title" />


    <TextView
        android:id="@+id/tv_notification_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:text="Уведомлять пользователя о превышение лимитов по дистанции или времени"
        android:textSize="@dimen/text_16"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/tv_train_notification_title"
        app:layout_constraintStart_toStartOf="@+id/tv_train_notification_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_train_notification_title" />


</androidx.constraintlayout.widget.ConstraintLayout>

